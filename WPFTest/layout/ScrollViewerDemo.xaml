<Window x:Class="WPFTest.ScrollViewerDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScrollViewer" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Rectangle Width="300" Height="100" Fill="Red"/>
                <Rectangle Width="300" Height="100" Fill="Yellow"/>
                <Rectangle Width="300" Height="100" Fill="Blue"/>
                <Rectangle Width="300" Height="100" Fill="Green"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
